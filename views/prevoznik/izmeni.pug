extends ../layout
block content  
    .row.justify-content-center
        .col-xs-12.col-md-6
            h3 Izmeni prevoznika
            form(action='/prevoznik/'+id+'/izmeni' method='POST' enctype="multipart/form-data")
                .form-group
                    label(for='naziv') Naziv
                    input#naziv.form-control(type='text' name='naziv' value=locals.old('naziv',naziv))
                .form-group
                    label(for='opis') Opis
                    textarea#opis.form-control(name='opis' rows="5")=locals.old('opis',opis)
                .form-group
                    label(for='logo') Logo
                    input#logo.form-control(type='file' name='logo')

                .form-group
                    button.btn.btn-primary(type='submit') Izmeni
