extends ../layout
block content  
    .row.justify-content-center
        .col-xs-12.col-md-6
            h3 Dodaj novog prevoznika
            form(action='/prevoznik/kreiraj' method='POST' enctype="multipart/form-data")
                .form-group
                    label(for='naziv') Naziv
                    input#naziv.form-control(type='text' name='naziv' value=locals.old('naziv'))
                .form-group
                    label(for='opis') Opis
                    textarea#opis.form-control(name='opis' value=locals.old('opis') rows="5")
                .form-group
                    label(for='logo') Logo
                    input#logo.form-control(type='file' name='logo' value=locals.old('logo'))

                .form-group
                    button.btn.btn-primary(type='submit') Kreiraj
