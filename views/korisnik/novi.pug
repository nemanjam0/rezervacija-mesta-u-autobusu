extends ../layout
block content  
  .row.justify-content-center
    .col-xs-12.col-md-6
      h3 Registracija
      form(action='/korisnik/kreiraj' method='POST')
        .form-group
          label(for='ime') Ime
          input#email.form-control(type='text' name='ime' value=locals.old('ime'))
        .form-group
          label(for='prezime') Prezime
          input#email.form-control(type='text' name='prezime' value=locals.old('prezime'))
        .form-group
          label(for='broj_telefona') Broj telefona
          input#email.form-control(type='text' name='broj_telefona' value=locals.old('broj_telefona'))
        .form-group
          label(for='email') Email
          input#email.form-control(type='email' name='email' value=locals.old('email'))
        .form-group
          label(for='sifra') &Scaron;ifra
          input#sifra.form-control(type='password' name='sifra')
        .form-group
          label(for='tip_naloga') &Scaron;ifra
          select#tip_naloga.form-control.tip_naloga(name='tip_naloga')
            option(value='korisnik' selected) Korisnik
            option(value='kondukter') Kondukter
            option(value='prodavac') Prodavac
            option(value='vozac') Vozaƒç
            option(value='admin') Admin
        .form-group
          button.btn.btn-primary(type='submit') Kreiraj novog
