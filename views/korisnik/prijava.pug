extends ../layout
block content  
    .row.justify-content-center
        .col-xs-12.col-md-6
            h3 Prijava
            form(action='/prijava' method='POST')
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email' name='email' value=locals.old('email'))
                .form-group
                    label(for='lozinka') Lozinka
                    input#lozinka.form-control(type='password' name='lozinka')
                .form-group
                    button.btn.btn-primary(type='submit') Prijavi se
